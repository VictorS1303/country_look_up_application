---
import CountrySearch from './CountrySearch.astro'
import RegionFilter from './RegionFilter.astro'
---

<div class="container country-search-and-region-filter-container">
    <CountrySearch />
    <RegionFilter />
</div>

<style>
    .country-search-and-region-filter-container
    {
        display: flex;
        justify-content: space-between;
        flex-direction: column;
    }

    @media screen and (min-width: 768px)
    {
        .country-search-and-region-filter-container
        {
            padding: 0 40px;
            flex-direction: row;
        }

    }
</style>
